<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.youi1987.mykotlinservice.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginLeft="12dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@+id/stopButton"
        app:layout_constraintLeft_toRightOf="@+id/startButton"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="101dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/stopButton"
        app:layout_constraintLeft_toLeftOf="@+id/bindRemoteButton"
        app:layout_constraintRight_toRightOf="@+id/bindRemoteButton"
        app:layout_constraintTop_toTopOf="@+id/stopButton"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="175dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="78dp"
        android:layout_marginTop="175dp"
        android:onClick="onClick"
        android:text="Stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="175dp" />

    <Button
        android:id="@+id/bindRemoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="48dp"
        android:onClick="onClick"
        android:text="bind remote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/unbindRemoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="onClick"
        android:text="unbind remote"
        app:layout_constraintLeft_toLeftOf="@+id/stopButton"
        app:layout_constraintTop_toBottomOf="@+id/stopButton"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/pingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:onClick="onClick"
        android:text="ping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="382dp" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="broadcast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
