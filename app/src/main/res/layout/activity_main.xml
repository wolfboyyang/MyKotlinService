<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.youi1987.mykotlinservice.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"
        tools:layout_editor_absoluteY="101dp"
        tools:layout_editor_absoluteX="154dp"
        app:layout_constraintLeft_toRightOf="@+id/bindButton"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/unbindButton" />

    <Button
        android:id="@+id/bindButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="bind"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="175dp"
        app:layout_constraintTop_toTopOf="@+id/unbindButton"
        app:layout_constraintBottom_toBottomOf="@+id/unbindButton"
        app:layout_constraintLeft_toLeftOf="@+id/bindRemoteButton"
        app:layout_constraintRight_toRightOf="@+id/bindRemoteButton" />

    <Button
        android:id="@+id/unbindButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="unbind"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="175dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="175dp"
        android:layout_marginRight="78dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bindRemoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="48dp"
        android:onClick="onClick"
        android:text="bind remote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bindButton"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/unbindRemoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="onClick"
        android:text="unbind remote"
        app:layout_constraintLeft_toLeftOf="@+id/unbindButton"
        app:layout_constraintTop_toBottomOf="@+id/unbindButton"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="271dp" />

</android.support.constraint.ConstraintLayout>
